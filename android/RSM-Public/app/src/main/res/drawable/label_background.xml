<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Фон с градиентом
     android:startColor="#94CCCCCC"
                android:centerColor="#4ECCCCCC"
                android:endColor="#36CCCCCC"


                                android:startColor="#ABC2CED3"
                android:centerColor="#7CB8BECC"
                android:endColor="#5FA5B4BF"
    -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4CD4DEE2"
                android:centerColor="#48E6E6F0"
                android:endColor="#07E6E6F0"
                android:angle="0" />

            <corners
                android:topLeftRadius="40dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>

    <!-- Обводка -->
    <item android:right="-1dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="?attr/SettingsBackgroundTintTop"
                />
            <corners
                android:topLeftRadius="40dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>

</layer-list>