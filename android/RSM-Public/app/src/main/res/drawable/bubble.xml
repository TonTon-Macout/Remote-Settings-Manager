<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >


    <item android:top="0dp" android:bottom="10dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#FAF4F4" />
            <size
                android:width="160dp"
                android:height="100dp"/>
            <stroke
                android:width="4dp"
                android:color="#FFFFFF" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item
        android:bottom="-1dp"
        android:top="0dp"
        android:gravity="center_horizontal|bottom"

        >
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="135%"
            android:pivotY="15%">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" />
                <size
                    android:height="10dp"
                    android:width="10dp"/>
            </shape>
        </rotate>
    </item>
    <item
        android:bottom="14dp"
        android:top="0dp"
        android:gravity="center_horizontal|bottom"

        >
        <rotate
            android:fromDegrees="0"
            android:toDegrees="0"
            android:pivotX="135%"
            android:pivotY="15%">
            <shape android:shape="rectangle">
                <solid android:color="#FAF4F4" />
                <size
                    android:height="10dp"
                    android:width="30dp"/>
            </shape>
        </rotate>
    </item>

</layer-list>
