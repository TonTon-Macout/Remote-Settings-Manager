<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="8dp"
    android:paddingEnd="12dp">
    <!-- @drawable/circle_background -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >


        <ImageView
            android:id="@+id/device_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="icons"
            android:src="@android:drawable/ic_menu_info_details"
            app:tint="?attr/textDeviceIconsTint"
            tools:tint="#2196F3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Название"
                    android:textColor="?attr/textDeviceTint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Название"
                    tools:textColor="@color/black"

                    />

                <ImageView
                    android:id="@+id/active"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="1dp"
                    android:alpha="1"
                    android:src="@drawable/ic_active_device" />
            </LinearLayout>

            <TextView
                android:id="@+id/device_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Нет сети"
                android:textSize="13sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/device_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="192.168.1.100"
                android:textSize="13sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/item_device_background"

        />

</LinearLayout>