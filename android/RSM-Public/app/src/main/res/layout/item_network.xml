<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Иконка статуса "доверенная" -->
    <ImageView
        android:id="@+id/trusted_status_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_lock_lock"

        android:layout_marginEnd="16dp"
        tools:visibility="visible"
        />

    <!-- Контейнер для текста (SSID и BSSID) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Имя сети (SSID) -->
        <TextView
            android:id="@+id/network_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#736E6E"
            android:textStyle="bold"
            tools:text="My Home WiFi" />

        <!-- MAC-адрес сети (BSSID) -->
        <TextView
            android:id="@+id/network_bssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#9D9797"
            tools:text="AA:BB:CC:11:22:33" />

    </LinearLayout>
    <!-- Кнопка редактирования -->
    <ImageView
        android:id="@+id/edit_network_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_edit"
        app:tint="@android:color/holo_green_dark"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Редактировать"/>
    <!-- Кнопка удаления -->
    <ImageView
        android:id="@+id/delete_network_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_delete"
        app:tint="@android:color/holo_red_dark"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Удалить"/>

</LinearLayout>