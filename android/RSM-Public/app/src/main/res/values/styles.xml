<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.App.Card.Header" parent="">
        <item name="color">#ff0000</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>




    <style name="AppTheme.RoundedAlertDialog" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@drawable/dialog_rounded_background</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <style name="AppTheme.RoundedAlertDialogErr" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@drawable/dialog_err_rounded_background</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>



    <style name="CustomOutlinedBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/CustomHintTextAppearance</item>
    </style>

    <style name="CustomHintTextAppearance">

        <item name="android:textColor">?attr/textButtonBackgroundTint</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColorHint">?attr/textButtonBackgroundTint</item>
        <item name="android:textColorHintInverse">?attr/textButtonBackgroundTint</item>



    </style>






</resources>
